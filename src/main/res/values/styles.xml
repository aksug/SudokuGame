<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>-->
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:textColorHint">#f55e033d</item>
        <item name="bs_dialogBackground">#e27c84f7</item>
        <item name="bs_dividerColor">#f55e033d</item>
        <item name="bs_numColumns">3</item>
        <item name="android:listSelector">@drawable/element_selector</item>
        <item name="bs_listStyle">@style/BottomSheet.StyleList</item>
    </style>

    <style name="BottomSheet.StyleList" parent="BottomSheet.List.Dark" >
        <item name="android:listSelector">@drawable/element_selector</item>
    </style>


</resources>
